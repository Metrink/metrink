<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.metrink</groupId>
    <artifactId>metrink</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>metrink-collector</artifactId>
  <name>Metrink Collector</name>
  <packaging>war</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
      </plugin>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <executions>
              <execution>
                  <phase>package</phase>
                  <goals>
                      <goal>shade</goal>
                  </goals>
                  <configuration>
                      <transformers>
                          <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                              <mainClass>com.es.CollectorService</mainClass>
                          </transformer>
                          <!-- This transformer is required to get Jersey working -->
                          <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                          <!-- <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer"> 
                          <resource>wicket.properties</resource> </transformer> -->
                      </transformers>
                      <artifactSet>
                          <excludes>
                              <!-- Exclude all of the test deps -->
                              <exclude>junit:*</exclude>
                              <exclude>org.mockito:*</exclude>
                              <exclude>org.powermock:*</exclude>
                              <exclude>org.dbunit:*</exclude>
                          </excludes>
                      </artifactSet>
                      <filters>
                          <filter>
                              <artifact>*:*</artifact>
                              <excludes>
                                  <exclude>META-INF/*.SF</exclude>
                                  <exclude>META-INF/*.DSA</exclude>
                                  <exclude>META-INF/*.RSA</exclude>
                              </excludes>
                          </filter>
                      </filters>
                  </configuration>
              </execution>
          </executions>
      </plugin>      
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/main/java/com/es/config/jaxb</directory>
              <includes>
                <include>**/*.java</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
            <fileset>
              <directory>src/main/java/com/es/grammar/javacc</directory>
              <includes>
                <include>**/*.java</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.metrink</groupId>
      <artifactId>metrink-common</artifactId>
<!-- 
      <exclusions>
        <exclusion>
        </exclusion>
      </exclusions>
 -->      
    </dependency>
    <!-- Croquet -->
    <dependency>
      <groupId>com.metrink.croquet</groupId>
